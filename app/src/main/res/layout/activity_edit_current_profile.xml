<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/title_edit_id"
        android:layout_width="182dp"
        android:layout_height="43dp"
        android:layout_marginTop="36dp"
        android:text="Update your profile Information"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/city_name_edit_id"
        android:layout_width="209dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="52dp"
        android:ems="10"
        android:hint="City Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/api_key_edit_id" />

    <EditText
        android:id="@+id/api_key_edit_id"
        android:layout_width="209dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="52dp"
        android:ems="10"
        android:hint="API Key"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prof_edit_name_id" />

    <TextView
        android:id="@+id/apikey_edit_id"
        android:layout_width="112dp"
        android:layout_height="27dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="24dp"
        android:text="API Key"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/api_key_edit_id"
        app:layout_constraintTop_toBottomOf="@+id/prof_edit_id" />

    <TextView
        android:id="@+id/prof_edit_id"
        android:layout_width="112dp"
        android:layout_height="27dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="24dp"
        android:text="Profile Name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/prof_edit_name_id"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/prof_edit_name_id"
        android:layout_width="209dp"
        android:layout_height="40dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="52dp"
        android:ems="10"
        android:hint="Profile Name"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/city_edit_id"
        android:layout_width="112dp"
        android:layout_height="27dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="24dp"
        android:text="City Name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/city_name_edit_id"
        app:layout_constraintTop_toBottomOf="@+id/apikey_edit_id" />

    <CheckBox
        android:id="@+id/unit_edit_id"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="100dp"
        android:text="Would you like to see the temperature in degrees Celsius?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_name_edit_id" />

    <CheckBox
        android:id="@+id/default_edit_id"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:text="Would you like to make this profile as a default one?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unit_edit_id" />

    <Button
        android:id="@+id/update_edit_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/buttons"
        android:backgroundTint="#ECEEEF"
        android:text="Update"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cancel_edit_id"
        style="@android:style/Widget.Material.Light.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/buttons"
        android:backgroundTint="#ECEEEF"
        android:radius="10px"
        android:text="Cancel"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
